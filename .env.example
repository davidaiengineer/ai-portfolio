# AI Portfolio Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (Optional - only needed for hosted services)
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google Cloud
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Hugging Face
HUGGINGFACEHUB_API_TOKEN=your_hf_token_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/ai_portfolio
POSTGRES_USER=ai_portfolio_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=ai_portfolio

# SQLite (for local development)
SQLITE_DB_PATH=./data/ai_portfolio.db

# =============================================================================
# Vector Store Configuration
# =============================================================================

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8001

# FAISS
FAISS_INDEX_PATH=./data/faiss_index

# =============================================================================
# Model Configuration
# =============================================================================

# Default model settings
DEFAULT_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# Model cache directory
MODEL_CACHE_DIR=./models/cache
HUGGINGFACE_CACHE_DIR=./models/hf_cache

# =============================================================================
# Application Settings
# =============================================================================

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "http://localhost:8502"]

# =============================================================================
# Data Paths
# =============================================================================

# Data directories
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
OUTPUT_PATH=./outputs
LOGS_PATH=./logs

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Logging
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# Security
# =============================================================================

# JWT Secret (for API authentication)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Development Settings
# =============================================================================

# Development mode
DEVELOPMENT_MODE=True
RELOAD=True

# Testing
TEST_DATABASE_URL=sqlite:///./test.db
TESTING=False

# =============================================================================
# Cloud Storage (Optional)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_STORAGE_CONTAINER_NAME=ai-portfolio

# Google Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=your-gcs-bucket
